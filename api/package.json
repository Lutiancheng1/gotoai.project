{
  "name": "ai-chat-api",
  "version": "1.0.0",
  "description": "AI Knowledge Base Chat System API",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon",
    "build": "tsc && tsc-alias",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "setup": "cp .env.dev.example .env.development",
    "setup:prod": "cp .env.prod.example .env.production",
    "docker:dev": "docker-compose --env-file .env.development -p ai-chat-dev -f docker/docker-compose.dev.yml up --build",
    "docker:dev:clean": "docker-compose --env-file .env.development -p ai-chat-dev -f docker/docker-compose.dev.yml down -v && docker-compose --env-file .env.development -p ai-chat-dev -f docker/docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose --env-file .env.production -p ai-chat-prod -f docker/docker-compose.prod.yml up --build -d",
    "docker:prod:clean": "docker-compose --env-file .env.production -f docker/docker-compose.prod.yml down -v && docker-compose --env-file .env.production -p ai-chat-prod -f docker/docker-compose.prod.yml up --build -d",
    "docker:stop": "docker-compose --env-file .env.development -f docker/docker-compose.dev.yml down",
    "docker:stop:prod": "docker-compose --env-file .env.production -f docker/docker-compose.prod.yml down",
    "docker:logs": "docker-compose --env-file .env.development -f docker/docker-compose.dev.yml logs -f",
    "docker:logs:prod": "docker-compose --env-file .env.production -f docker/docker-compose.prod.yml logs -f",
    "deploy": "bash scripts/deploy.sh",
    "backup:prod": "bash scripts/backup.sh",
    "restore:prod": "bash scripts/restore.sh"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "redis": "^4.6.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.7",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.52.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
